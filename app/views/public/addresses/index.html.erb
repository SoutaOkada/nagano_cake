<div class="container-lg">

  <div class="row", style="margin:20px 0;">
    <div class="col-3">
      <h3 style="background-color:lightgray; text-align:center;">配送先登録/一覧</h3>
    </div>
  </div>

  <div class="container-lg">

    <%= form_with model: @address do |f| %>

      <div class="row", style="margin-bottom:5px;">

        <div class="col-3">
          <p style="display:inline;">郵便番号(ハイフンなし)</p>
        </div>

        <div class="col-5">
          <%= f.text_field :postal_code %>
        </div>

      </div>

      <div class="row", style="margin-bottom:5px;">

        <div class="col-3">
          <p style="display:inline;">住所</p>
        </div>

        <div class="col-5">
          <%= f.text_field :address, size:70 %>
        </div>

      </div>

      <div class="row", style="margin-bottom:5px;">
        <div class="col-3">
          <p style="display:inline;">宛名</p>
        </div>

        <div class="col-5">
          <%= f.text_field :name %>
        </div>

        <div class="3">
          <%= f.submit '新規登録', class: "btn btn-success" %>
        </div>

      </div>

    <% end %>

  </div>

  <div class="row">

    <table class="table table-bordered table-sm">

      <tr class="table-secondary">
        <th>郵便番号</th>
        <th>住所</th>
        <th>宛名</th>
        <th></th>
      </tr>

      <% @addresses.each do |address| %>

        <tr>
          <td><%= address.postal_code %></td>
          <td><%= address.address %></td>
          <td><%= address.name %></td>
          <td style="display:flex; text-align:center;">
            <div style="margin-right:10px;">
              <%= link_to "編集する", edit_address_path(address.id), class: "btn btn-success" %>
            </div>

            <div>
              <%= button_to "削除する", address_path(address.id), method: :delete, class: "btn btn-danger" %>
            </div>
          </td>
        </tr>

      <% end %>

    </table>

  </div>

</div>