<h3>注文情報入力</h3>
  <%= form_with model: @order do |f| %>
    <h4>支払方法</h4>
      <%= f.radio_button :payment_method, Order.payment_methods.key(0), checked: true %>
      <%= f.label :payment_method, Order.payment_methods_i18n[:credit_card] %>

      <%= f.radio_button :payment_method, Order.payment_methods.key(1) %>
      <%= f.label :payment_method, Order.payment_methods_i18n[:transfer] %>

    <h4>お届け先</h4>
      <%= f.radio_button :select_address, 0, checked: true%>
      <%= f.label :select_address, "ご自身の住所" %>
        〒<%= @customer.postal_code %> <%= @customer.address %></br>
        <%= @customer.last_name %> <%= @customer.first_name %></br>

      <%= f.radio_button :select_address, 1 %>
      <%= f.label :select_address, "登録済み住所から選択" %></br>
        <%= f.select :address_id, options_from_collection_for_select(Address.all, :id, :address_display) %></br>

      <%= f.radio_button :select_address, 2 %>
      <%= f.label :select_address, "新しいお届け先" %>
        <p>郵便番号(ハイフンなし)</p>
          <%= f.text_field :shipping_postal_code %>

        <p>住所</p>
          <%= f.text_field :shipping_address %>

        <p>宛名</p>
          <%= f.text_field :shipping_name %>

    <%= f.submit "確認画面へ進む" %>
  <% end %>