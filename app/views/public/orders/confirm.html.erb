<div class="container-lg">

  <div class="row", style="margin-top:20px;">
    <h3 style="background-color:lightgray; text-align:center;">注文情報確認</h3>
  </div>

  <div class="row">
    <div class="col-9">
      <table class="table table-bordered table-sm">

        <tr class="table-secondary">
          <th>商品名</th>
          <th>単価(税込)</th>
          <th>数量</th>
          <th>小計</th>
        </tr>

        <% @cart_items.each do |cart_item| %>
          <tr>
            <td>
              <%= image_tag cart_item.item.image, size: "50x35" %>
              <strong style=""><%= cart_item.item.name %></strong>
            </td>

            <td>
              <%= cart_item.item.add_tax_price.to_s(:delimited) %>
            </td>

            <td>
              <%= cart_item.amount %>
            </td>

            <td>
              <%= cart_item.subtotal.to_s(:delimited) %>
            </td>
          </tr>
        <% end %>

      </table>
    </div>

    <div class="col-3">
      <table class="table table-bordered table-sm">

        <tr>
          <td class="table-secondary">送料</td>
          <td><%= @order.postage.to_s(:delimited) %></td>
        </tr>

        <tr>
          <td class="table-secondary">商品合計</td>
          <td>
            <%= @total.to_s(:delimited) %>
          </td>
        </tr>

        <tr>
          <td class="table-secondary">請求金額</td>
          <td>
            <%= @order.payment.to_s(:delimited) %>
          </td>
        </tr>

      </table>
    </div>

  </div>

  <div class="row">
    <div class="col-1">
      <p><strong>支払方法</strong></p>
    </div>

    <div class="col-3">
      <%= @order.payment_method_i18n %>
    </div>
  </div>

  <div class="row">
    <div class="col-1">
      <p><strong>お届け先</strong></p>
    </div>

    <div class="col-11">
    〒<%= @order.shipping_postal_code %> <%= @order.shipping_address %></br>
      <%= @order.shipping_name %>
    </div>
  </div>

  <div class="row align-items-center justify-content-center", style="margin-top:30px;">
    <%= form_with model: @order, url: orders_path, method: :post do |f| %>
      <%= f.hidden_field :shipping_postal_code, :value => @order.shipping_postal_code %>
      <%= f.hidden_field :shipping_address, :value => @order.shipping_address %>
      <%= f.hidden_field :shipping_name, :value => @order.shipping_name %>
      <%= f.hidden_field :postage, :value => @order.postage %>
      <%= f.hidden_field :payment, :value => @order.payment %>
      <%= f.hidden_field :payment_method, :value => @order.payment_method %>
      <%= f.submit '注文を確定する', class: "btn btn-success" %>
    <% end %>
  </div>


</div>