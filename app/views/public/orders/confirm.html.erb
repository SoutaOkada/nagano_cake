<h3>注文情報確認</h3>

  <table>
    <tr>
      <th>商品名</th>
      <th>単価(税込)</th>
      <th>数量</th>
      <th>小計</th>
    </tr>

    <% @cart_items.each do |cart_item| %>
      <tr>
        <td>
          <%= image_tag cart_item.item.image, size: "50x50" %>
          <%= cart_item.item.name %>
        </td>

        <td>
          <%= cart_item.item.add_tax_price.to_s(:delimited) %>
        </td>

        <td>
          <%= cart_item.amount %>
        </td>

        <td>
          <%= cart_item.subtotal.to_s(:delimited) %>
        </td>

      </tr>
    <% end %>
  </table>

  <table>
    <tr>
      <td>送料</td>
      <td><%= @order.postage.to_s(:delimited) %></td>
    </tr>

    <tr>
      <td>商品合計</td>
      <td>
        <%= @total.to_s(:delimited) %>
      </td>
    </tr>

    <tr>
      <td>請求金額</td>
      <td>
        <%= @order.payment.to_s(:delimited) %>
      </td>
    </tr>
  </table>

  <h4>支払方法</h4>
    <%= @order.payment_method_i18n %>

  <h4>お届け先</h4>
    〒<%= @order.shipping_postal_code %> <%= @order.shipping_address %></br>
      <%= @order.shipping_name %>

  <%= form_with model: @order, url: orders_path, method: :post do |f| %>
    <%= f.hidden_field :shipping_postal_code, :value => @order.shipping_postal_code %>
    <%= f.hidden_field :shipping_address, :value => @order.shipping_address %>
    <%= f.hidden_field :shipping_name, :value => @order.shipping_name %>
    <%= f.hidden_field :postage, :value => @order.postage %>
    <%= f.hidden_field :payment, :value => @order.payment %>
    <%= f.hidden_field :payment_method, :value => @order.payment_method %>
    <%= f.submit '注文を確定する' %>
  <% end %>