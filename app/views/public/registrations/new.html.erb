<div class="container-lg">

  <div class="row", style="margin:20px 0;">
    <div class="col-3">
      <h4 style="background-color:lightgray; text-align:center;">新規会員登録</h4>
    </div>
  </div>

  <div class="container-lg">

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

        <div class="row">

          <div class="col-3">
            <p style="display:inline;">名前</p>
          </div>

          <%= f.label :last_name, "(姓)", class: "col-1" %>
          <div class="col-3">
            <%= f.text_field :last_name %>
          </div>

          <%= f.label :first_name, "(名)", class: "col-1" %>
          <div class="col-3">
            <%= f.text_field :first_name %>
          </div>

        </div>

        <div class="row">

          <div class="col-3">
            <p class="display:inline;">フリガナ</p>
          </div>

          <%= f.label :last_name_kana, "(セイ)", class: "col-1" %>
          <div class="col-3">
            <%= f.text_field :last_name_kana %>
          </div>

          <%= f.label :first_name_kana, "(メイ)", class: "col-1" %>
          <div class="col-3">
            <%= f.text_field :first_name_kana %>
          </div>

        </div>

      <div class="row">
        <div class="col-3">
          <p>メールアドレス</p>
        </div>

        <div class="col-1"></div>

        <div class="col-3">
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>
      </div>

      <div class="row">
        <div class="col-3">
          <p>郵便番号(ハイフンなし)</p>
        </div>

        <div class="col-1"></div>

        <div class="col-3">
          <%= f.text_field :postal_code %>
        </div>
      </div>

      <div class="row">
        <div class="col-3">
          <p>住所</p>
        </div>

        <div class="col-1"></div>

        <div class="col-6">
          <%= f.text_field :address, size: 70 %>
        </div>
      </div>

      <div class="row">
        <div class="col-3">
          <p>電話番号(ハイフンなし)</p>
        </div>

        <div class="col-1"></div>

        <div class="col-3">
          <%= f.text_field :telephone_number %>
        </div>
      </div>

      <div class="row">
        <div class="col-3">
          <%= f.label :password, "パスワード(8文字以上)" %>
        </div>

        <div class="col-1"></div>

        <div class="col-3">
          <%= f.password_field :password, autocomplete: "new-password" %>
        </div>
      </div>

      <div class="row">
        <div class="col-3">
          <%= f.label :password_confirmation, "パスワード(確認用)" %>
        </div>

        <div class="col-1"></div>

        <div class="col-3">
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>
      </div>

      <div class="row">
        <div class="col-3"></div>

        <div class="col-1"></div>

        <div class="col-3">
          <%= f.submit "新規登録", class: "btn btn-success" %>
        </div>
      </div>

    <% end %>

  </div>

  <%= render "public/shared/links" %>

</div>