<h4>新規会員登録</h4>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <div>
    <p>名前</p>

    <div class="field">
      <%= f.label :last_name, "(姓)" %>
      <%= f.text_field :last_name %>
    </div>

    <div class="field">
      <%= f.label :first_name, "(名)" %>
      <%= f.text_field :first_name %>
    </div>
  </div>

  <div>
    <p>フリガナ</p>

    <div class="field">
      <%= f.label :last_name_kana, "(セイ)" %>
      <%= f.text_field :last_name_kana %>
    </div>

    <div class="field">
      <%= f.label :first_name_kana, "(メイ)" %>
      <%= f.text_field :first_name_kana %>
    </div>
  </div>

  <div class="field">
    <p>メールアドレス</p>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div>
    <p>郵便番号(ハイフンなし)</p>
    <%= f.text_field :postal_code %>
  </div>

  <div>
    <p>住所</p>
    <%= f.text_field :address %>
  </div>

  <div>
    <p>電話番号(ハイフンなし)</p>
    <%= f.text_field :telephone_number %>
  </div>

  <div class="field">
    <%= f.label :password, "パスワード(8文字以上)" %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "パスワード(確認用)" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>
<% end %>

<%= render "public/shared/links" %>
