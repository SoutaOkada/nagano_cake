<div class="container-lg">

  <div class="row", style="margin:20px 0;">
    <div class="col-3">
      <h4 style="background-color:lightgray; text-align:center;">会員情報編集</h4>
    </div>
  </div>

  <div class=" container-lg">

    <%= form_with model: @customer, url: customers_path do |f| %>

      <div class="row", style="margin-bottom:5px;">

        <div  class="col-3">
          <p style="display:inline;">氏名</p>
        </div>

        <div class="col-3">
          <%= f.text_field :last_name %>
        </div>

        <div class="col-3">
          <%= f.text_field :first_name %>
        </div>

      </div>

      <div class="row">

        <div class="col-3">
          <p>フリガナ</p>
        </div>

        <div class="col-3">
          <%= f.text_field :last_name_kana %>
        </div>

        <div class="col-3">
          <%= f.text_field :first_name_kana %>
        </div>
      </div>

      <div class="row">
        <div class="col-3">
          <p>郵便番号</p>
        </div>

        <div class="col-3">
          <%= f.text_field :postal_code %>
        </div>
      </div>

      <div class="row">
        <div class="col-3">
          <p>住所</p>
        </div>

        <div class="col-3">
          <%= f.text_field :address, size: 70 %>
        </div>
      </div>

      <div class="row">
        <div class="col-3">
          <p>電話番号</p>
        </div>

        <div class="col-3">
          <%= f.text_field :telephone_number %>
        </div>
      </div>

      <div class="row">
        <div class="col-3">
          <p>メールアドレス</p>
        </div>

        <div class="col-3">
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>
      </div>

      <div class="row", style="margin-top:5px;">
        <div class="col-3"></div>

        <div class="col-3">
          <%= f.submit "編集内容を保存", class: "btn btn-success" %>
        </div>

        <div class="col-3">
          <%= link_to "退会する", customers_confirm_path, class: "btn btn-danger" %>
        </div>

      </div>


    <% end %>

  </div>

</div>