<h3>ショッピングカート</h3>

  <table>
    <tr>
      <th>商品名</th>
      <th>単価(税込)</th>
      <th>数量</th>
      <th>小計</th>
      <th></th>
    </tr>

    <% @cart_items.each do |cart_item| %>
      <tr>
        <td>
          <%= image_tag cart_item.item.image, size: "50x50" %>
          <%= cart_item.item.name %>
        </td>

        <td>
          <%= cart_item.item.add_tax_price.to_s(:delimited) %>
        </td>

        <td>
          <%= cart_item.amount %>
        </td>

        <td>
          <%= cart_item.subtotal.to_s(:delimited) %>
        </td>
        <td></td>
      </tr>
    <% end %>
  </table>