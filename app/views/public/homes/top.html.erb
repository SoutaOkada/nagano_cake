<h2>新着商品</h2>
  <% @items.each do |item| %>

    <%= link_to item_path(item.id) do %>
      <%= image_tag item.image, size: "200x200" %>
      <%= item.name %>
      <p>¥<span><%= item.add_tax_price.to_s(:delimited) %></span></p>
    <% end %>

  <% end %>

