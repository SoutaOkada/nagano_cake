<%= image_tag @item.image, size: "200x200" %>

<h3><%= @item.name %></h3>

<p><%= @item.introduction %></p>

<h3> <%= @item.add_tax_price.to_s(:delimited) %></h3>
  <p>(税込)</p>

<%= form_with model: @cart_item, url: cart_items_path do |f| %>
  <%= f.hidden_field :item_id, value: @item.id %>
  <%= f.select :amount, *[1..10] %>
  <%= f.submit "カートに入れる" %>
<% end %>