<div class="container-md">

  <div class="row">
    <h2 style="display: inline-block">商品一覧</h2>
    <p style="position:relative; left:5px; top:15px;">(全<%= @items.count %>件)</p>
  </div>

  <div class="row">
      <% @items.each do |item| %>
        <div class="col-3">
          <%= link_to item_path(item.id) do %>
            <%= image_tag item.image, size: "200x150", style: "margin-bottom:10px;" %>
            <p><%= item.name %></p>
            <p>¥<span><%= item.add_tax_price.to_s(:delimited) %></span></p>
          <% end %>
        </div>
      <% end %>
  </div>

  <div class="row align-items-center justify-content-center">
    <%= paginate @items %>
  </div>

</div>