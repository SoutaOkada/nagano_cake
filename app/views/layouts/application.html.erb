<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header style="height: 150px", class="container-fluid w-100 shadow-sm">

      <% if admin_signed_in? %>
        <div class="row h-100 w-100">

          <div class="col-3 d-flex align-items-center justify-content-center">
            <h1>LOGO</h1>
          </div>

          <div class="col-4">
          </div>

          <div class="col-5 d-flex align-items-center justify-content-center">
            <%= link_to "商品一覧", admin_items_path, class: "btn btn-outline-secondary w-20 m-1" %>

            <%= link_to "会員一覧", admin_customers_path, class: "btn btn-outline-secondary w-20 m-1" %>

            <%= link_to "注文履歴一覧", admin_root_path, class: "btn btn-outline-secondary w-20 m-1" %>

            <%= link_to "ジャンル一覧", admin_genres_path, class: "btn btn-outline-secondary w-20 m-1" %>

            <%= link_to "ログアウト", destroy_admin_session_path, class: "btn btn-outline-secondary w-20 m-1" %>
          </div>
        </div>

      <% elsif customer_signed_in? %>

          <div class="row h-100 w-100">

            <div class="col-3 d-flex align-items-center justify-content-center">
              <%= link_to "LOGO", root_path, class: "navbar-brand border" %>
            </div>

            <div class="col-4 d-flex align-items-center justify-content-center">
              <p>ようこそ、<strong><%= current_customer.last_name %></strong>さん！</p>
            </div>

            <div class="col-5 d-flex align-items-center justify-content-center">
              <%= link_to "マイページ", customers_path, class: "btn btn-outline-secondary w-20 m-1" %>

              <%= link_to "商品一覧", items_path, class: "btn btn-outline-secondary m-1" %>

              <%= link_to "カート", cart_items_path, class: "btn btn-outline-secondary m-1" %>

              <%= link_to "ログアウト", destroy_customer_session_path, class: "btn btn-outline-secondary m-1" %>
            </div>

          </div>

      <% else %>

        <div class="row h-100 w-100">

          <div class="col-3 d-flex align-items-center justify-content-center">
            <%= link_to "LOGO", root_path, class: "navbar-brand border" %>
          </div>

          <div class="col-4">
          </div>

          <div class="col-5 d-flex align-items-center justify-content-center">
              <%= link_to "About", about_path, class: "btn btn-outline-secondary w-20 m-1" %>

              <%= link_to "商品一覧", items_path, class: "btn btn-outline-secondary m-1" %>


              <%= link_to "新規登録", new_customer_registration_path, class: "btn btn-outline-secondary m-1" %>

              <%= link_to "ログイン", new_customer_session_path, class: "btn btn-outline-secondary m-1" %>
          </div>

        </div>
      <% end %>
    </header>

    <%= yield %>
  </body>
</html>
