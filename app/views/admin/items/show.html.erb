<div class="container-lg">

  <div class="row", style="margin:20px 0;">
    <div class="col-3">
      <h3 style="background-color:lightgray; text-align:center;">商品詳細</h3>
    </div>
  </div>

  <div class="row">

    <div class="col-4">
      <%= image_tag @item.image, size: "300x200" %>
    </div>

    <div class="col-8">

      <div class="row">
        <div class="col-3">
          <h4>商品名</h4>
        </div>

        <div class="col-9">
          <p><%= @item.name %></p>
        </div>
      </div>

      <div class="row">
        <div class="col-3">
          <h4>商品説明</h4>
        </div>

        <div class="col-9">
          <p><%= @item.introduction %></p>
        </div>
      </div>

      <div class="row">
        <div class="col-3">
          <h4>ジャンル</h4>
        </div>

        <div class="col-9">
          <p><%= @item.genre.name %></p>
        </div>
      </div>

      <div class="row">
        <div class="col-3", style="line-height:1;">
          <p style="margin:0;">税込価格</p>
          <p style="margin:0;">(税抜価格)</p>
        </div>

        <div class="col-9">
          <p><%= @item.add_tax_price.to_s(:delimited) %> (<%= @item.price.to_s(:delimited) %>)<span>円</span></p>
        </div>
      </div>

      <div class="row">
        <div class="col-3">
          <p>販売ステータス</p>
        </div>

        <div class="col-9">
          <p>
            <% if @item.is_active == true %>
              <p style="color:limegreen;">販売中</p>
            <% else %>
              <p style="color:silver;">販売停止中</p>
            <% end %>
          </td>
          </p>
        </div>

      </div>


      <%= link_to "編集する", edit_admin_item_path, class: "btn btn-success" %>

    </div>

  </div>

</div>