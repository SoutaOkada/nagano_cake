<h3>注文履歴一覧</h3>
  <table>
    <tr>
      <th>購入日時</th>
      <th>購入者</th>
      <th>注文個数</th>
      <th>注文ステータス</th>
    </tr>

    <% @orders.each do |order| %>
      <tr>
        <td>
          <%= link_to admin_order_path(order.id) do %>
            <%= order.created_at %>
          <% end %>
        </td>

        <td>
          <%= order.customer.last_name %><%= order.customer.first_name %>
        </td>

        <td>
          <% @sum = 0 %>
          <% order.order_details.each do |item| %>
            <% @sum += item.amount %>
          <% end %>
          <%= @sum %>
        </td>

        <td>
          <%= order.status_i18n %>
        </td>
      </tr>
    <% end %>
  </table>