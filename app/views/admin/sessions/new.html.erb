<div class="container-lg">

  <div class="row", style="margin:20px 0;">
    <div class="col-3">
      <h2 style="background-color:lightgray; text-align:center;">管理者ログイン</h2>
    </div>
  </div>

  <div class="container-lg">

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

      <div class="row">
        <div class="col-3">
          <p>メールアドレス</p>
        </div>

        <div class="col-3">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", size: 70 %>
        </div>
      </div>

      <div class="row">
        <div class="col-3">
          <p>パスワード</p>
        </div>

        <div class="col-3">
          <%= f.password_field :password, autocomplete: "current-password", size: 70 %>
        </div>
      </div>

      <div class="row">
        <div class="col-3"></div>

        <div class="col-3">
          <%= f.submit "ログイン", class: "btn btn-primary" %>
        </div>
      </div>

    <% end %>

  </div>


<%= render "admin/shared/links" %>


</div>