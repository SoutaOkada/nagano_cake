<div class="container-lg">

  <div class="row", style="margin:20px 0;">
    <div class="col-3">
      <h4 style="background-color:lightgray; text-align:center;">ジャンル一覧・追加</h4>
    </div>
  </div>

  <div class="row">
    <div class="col-2">
      <p>ジャンル名</p>
    </div>

    <%= form_with model: @genre, url: admin_genres_path do |f| %>
      <div class="col-5", style="display:inline-block;">
        <%= f.text_field :name %>
      </div>

      <div class="col-4", style="display:inline-block; margin-left: 50px;">
        <%= f.submit '新規登録', class: "btn btn-success" %>
      </div>
    <% end %>

  </div>

  <div class="row">

    <div class="col-5">

      <table class="table">

        <tr class="table-secondary">
          <th>ジャンル</th>
          <th></th>
        </tr>

        <% @genres.each do |genre| %>
          <tr>
            <td>
              <%= genre.name %>
            </td>

            <td>
              <%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-success" %>
            </td>
          </tr>
        <% end %>

      </table

    </div>



  </div>



</div>