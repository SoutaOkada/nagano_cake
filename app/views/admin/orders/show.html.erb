<h3>注文履歴詳細</h3>
  <table>
    <tr>
      <td>購入者</td>
      <td>
        <%= link_to admin_customer_path(@order.customer.id) do %>
          <%= @order.customer.first_name %> <%= @order.customer.last_name %>
        <% end %>
      </td>
    </tr>

    <tr>
      <td>注文日</td>
      <td>
        <%= @order.created_at.strftime('%Y/%m/%d') %>
      </td>
    </tr>

    <tr>
      <td>配送先</td>
      <td>
        〒<%= @order.shipping_postal_code %> <%= @order.shipping_address %></br>
        <%= @order.shipping_name %>
      </td>
    </tr>

    <tr>
      <td>支払方法</td>
      <td>
        <%= @order.payment_method_i18n %>
      </td>
    </tr>

    <tr>
      <td>注文ステータス</td>
      <td>
        <%= form_with model: @order, url: admin_order_path(@order.id) do |f| %>
          <%= f.select :status, [["入金待ち","waiting_pay"], ["入金確認","payed"], ["製作中","progress"],\
          ["発送準備中","standby"], ["発送済み","complete"]] %>
          <%= f.submit "更新" %>
        <% end %>
      </td>
    </tr>
  </table>

  <table>
    <tr>
      <th>商品名</th>
      <th>単価(税込)</th>
      <th>数量</th>
      <th>小計</th>
      <th>製作ステータス</th>
    </tr>

    <% @order.order_details.each do |order_detail| %>
      <tr>
        <td>
          <%= order_detail.item.name %>
        </td>

        <td>
          <%= order_detail.price.to_s(:delimited) %>
        </td>

        <td>
          <%= order_detail.amount %>
        </td>

        <td>
          <%= (order_detail.price * order_detail.amount).to_s(:delimited) %>
        </td>

        <td>
          <%= form_with model: order_detail, url: admin_order_detail_path do |f| %>
            <%= f.select :status, [["着手不可","cannot_start"], ["製作待ち","waiting"], \
              ["製作中","progress"], ["製作完了","complete"]] %>
          <%= f.submit "更新" %>
          <% end %>
        </td>

      </tr>
    <% end %>
  </table>

  <table>
    <tr>
      <td>商品合計</td>
      <td>
        <% @total = 0 %>
        <% @order.order_details.each do |order_detail| %>
          <% @total += (order_detail.price * order_detail.amount) %>
        <% end %>
        <%= @total.to_s(:delimited) %>円
      </td>
    </tr>

    <tr>
      <td>送料</td>
      <td>
        <%= @order.postage %>円
      </td>
    </tr>

    <tr>
      <td>請求金額合計</td>
      <td>
        <%= (@total + @order.postage).to_s(:delimited) %>円
      </td>
    </tr>

  </table>